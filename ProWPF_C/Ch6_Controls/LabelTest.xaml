<Window x:Class="ProWPF_C.Ch6_Controls.LabelTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LabelTest" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Target="{Binding ElementName=txtA}">Press Alt+A _A</Label>
            <TextBox Name="txtA"></TextBox>
            <Label Target="{Binding ElementName=txtB}">Press Alt+B _B</Label>
            <TextBox Name="txtB"></TextBox>
        </StackPanel>
    </Grid>
</Window>
