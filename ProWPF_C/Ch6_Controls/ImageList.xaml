<Window x:Class="ProWPF_C.Ch6_Controls.ImageList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageList" Height="300" Width="300">
    <Grid>
        <ListBox>
            <StackPanel Orientation="Horizontal">
                <Image Width="30" Source="./happyface.jpg"></Image>
                <Label VerticalAlignment="Center">A Happy Face</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Width="30" Source="./happyface.jpg"></Image>
                <Label VerticalAlignment="Center">A Happy Face</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Width="40" Source="./happyface.jpg"></Image>
                <Label VerticalAlignment="Center">A Happy Face</Label>
            </StackPanel>
        </ListBox>
    </Grid>
</Window>
