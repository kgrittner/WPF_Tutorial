<Window x:Class="ProWPF_C.WPFCookbook.Ch6DataBinding.ElementToElementCodeBindings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ElementToElementCodeBindings" Height="250" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="This is a sizing text" x:Name="_text" 
                   TextAlignment="Center" VerticalAlignment="Center"/>
        <Slider x:Name="_slider" Grid.Row="1" Minimum="10" Maximum="80" Value="30" Margin="4"/>
    </Grid>
</Window>

