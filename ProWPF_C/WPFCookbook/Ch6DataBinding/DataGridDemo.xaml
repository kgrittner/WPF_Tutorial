<Window x:Class="ProWPF_C.WPFCookbook.Ch6DataBinding.DataGridDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personal Info" Height="350" Width="525">
    <Grid>
        <DataGrid ItemsSource="{Binding}" AutoGeneratingColumn="OnAutoGeneratingColumn" AutoGeneratedColumns="OnAutoGeneratedColumns">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Avatar" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Margin="2" Width="32" Height="32" Source="{Binding Avatar}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
