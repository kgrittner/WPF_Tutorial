<Window x:Class="ProWPF_C.Ch11_Styles_Behaviors.AutomaticStyles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutomaticStyles" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Times New Roman"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="5">
            <Button Padding="5" Margin="5">Customized Button</Button>
            <TextBlock Margin="5">Normal Text</TextBlock>
            <Button Margin="5" Padding="5" Style="{x:Null}">A Normal Button: Style="{x:Null}"</Button>
            <Button Padding="5" Margin="5">Another Customized Button</Button>
        </StackPanel>
    </Grid>
</Window>
