<Window x:Class="ProWPF_C.WPFCookbook.Ch5ApplicationAndWindows.CommonDialogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CommonDialogs" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="Open Image" FontSize="20" Click="OnOpenImage" 
                HorizontalAlignment="Center" Margin="4" />
        <Image Grid.Row="1" x:Name="_img" Stretch="Uniform" />
    </Grid>
</Window>