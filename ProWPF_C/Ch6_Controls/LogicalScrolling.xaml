<Window x:Class="ProWPF_C.Ch6_Controls.LogicalScrolling"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogicalScrolling" Height="300" Width="300">
    <Grid>
        <ScrollViewer CanContentScroll="True">
            <StackPanel >
                <Button Height="100">1</Button>
                <Button Height="100">2</Button>
                <Button Height="100">3</Button>
                <Button Height="100">4</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
