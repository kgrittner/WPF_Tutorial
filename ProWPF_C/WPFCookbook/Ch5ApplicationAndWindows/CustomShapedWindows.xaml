<Window x:Class="ProWPF_C.WPFCookbook.Ch5ApplicationAndWindows.CustomShapedWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Title="MainWindow" Height="250" Width="400">
    <Grid MouseLeftButtonDown="OnMove">
        <Rectangle RadiusX="30" RadiusY="30">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="DarkBlue" Offset="0" />
                    <GradientStop Color="#80000080" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock TextAlignment="Center" VerticalAlignment="Top" Margin="4"
                   Text="My Window Title" FontSize="18" Foreground="White"
                   FontWeight="Bold" />
        <Button Content="X" HorizontalAlignment="Right" FontWeight="Bold"
                VerticalAlignment="Top" Margin="20,4" FontSize="16" Click="OnClose"/>
        <TextBlock Text="Welcome to the new Window!" Foreground="Yellow" FontSize="25"
                   VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>
