<Window x:Class="ProWPF_C.WPFCookbook.Ch5ApplicationAndWindows.Dialogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialogs" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="Enter Data" Click="OnEnterData" Margin="4" FontSize="16"/>
        <TextBlock FontSize="24" x:Name="_text" Grid.Row="1" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
